<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Easy Quran"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="46sp"
        android:textStyle="bold"
        app:fontFamily="cursive" />


    <LinearLayout

        android:id="@+id/li1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:orientation="vertical"
        android:background="@drawable/layout_bg"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="20dp"
        >


        <TextView
            android:id="@+id/tt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="What kinds of activities are you currently most interested in?"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/arabic"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get used to speaking in Arabic"
            android:padding="10dp"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/pra_quran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Practice Quran"
            android:padding="10dp"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/learn_quran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Learn Quran"
            android:padding="10dp"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/hifaz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correction in Hifaz"
            android:padding="10dp"

            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_next1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"

            android:text="Next"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />


    </LinearLayout>

<!--Next-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/li2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:orientation="vertical"
        android:background="@drawable/layout_bg"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="20dp"
        >


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="What are your current learning goals?"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/cb_improve"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Self Improvement"
            android:padding="10dp"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/cb_study"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Study Abroad"
            android:padding="10dp"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/cb_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pass an Interview"
            android:padding="10dp"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/cb_Excel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Excel at work/Job"
            android:padding="10dp"

            android:textSize="18sp" />





        <Button
            android:id="@+id/btn_next2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"

            android:text="Next"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />




    </LinearLayout>

    <LinearLayout
android:id="@+id/li3"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:orientation="vertical"
        android:background="@drawable/layout_bg"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="10dp"
        >
        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:inputType="text"
            android:textColor="#000"
            android:background="#f0f0f4"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/usrusr"
            android:drawablePadding="16dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#000"
            android:background="#f0f0f4"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/mail"
            android:drawablePadding="16dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#000"
            android:background="#f0f0f4"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/lockers"
            android:drawablePadding="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/Country"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:entries="@array/country_code"
                 />

            <EditText
                android:id="@+id/etcountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Country COde"
                android:inputType="textPassword"
                android:textColor="#000"
                android:background="#f0f0f4"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="Gender:"
               android:layout_marginLeft="5dp"


               android:textSize="19dp"/>



            <Spinner
                android:id="@+id/gen"
                android:layout_width="30dp"

                android:layout_height="wrap_content"
                android:entries="@array/country_arrays"
                android:layout_weight="1" />




        </LinearLayout>






        <EditText
            android:ems="30"
            android:id="@+id/etReferral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Referral Code (Optional)"
            android:inputType="text"
            android:textColor="#000"
            android:background="#f0f0f4"
            android:padding="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawablePadding="16dp"/>





        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="Next"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />




    </LinearLayout>



</LinearLayout>